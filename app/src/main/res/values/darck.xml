<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Kino.Dark" parent="ThemeRoot">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="ToolbarDark" parent="Widget.AppCompat.Toolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black</item>
        <item name="titleTextColor">#FFFFFF</item>
        <item name="titleMarginStart">0dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="searchIcon">@drawable/icon_search</item>
    </style>
</resources>