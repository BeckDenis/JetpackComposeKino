<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeRoot" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorBackground">@color/back</item>
        <item name="colorToolbar">@color/header</item>
        <item name="colorText">#D1D1D1</item>
        <item name="colorCard">#1B1B1B</item>
        <item name="statusBarBackground">@color/header</item>
        <item name="bottomColorIcon">@color/colorIcon</item>
        <item name="colorAssert">@color/colorIcon</item>
    </style>

    <style name="bottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="showAsAction">ifRoom</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ToolbarLight" parent="Widget.AppCompat.Toolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black</item>
        <item name="titleTextColor">#FFFFFF</item>
        <item name="titleMarginStart">0dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="searchIcon">@drawable/icon_search</item>
    </style>

    <style name="ToolBarStyle" parent="ToolBarStyle.Base"/>

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="android:titleTextStyle">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
        <item name="backgroundColor">?colorToolbar</item>
    </style>

    m<style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?colorText</item>
        <item name="tintMode">multiply</item>
    </style>

    <style name="expandedTitleTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">?colorText</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?colorText</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>